<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/red_gradient"></ImageView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_scan"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="-260dp"
        android:src="@drawable/ic_samel" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/color_gradientgreen"
        >
    </ImageView>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CPF: "
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="-75dp"
        android:inputType="number">
    </TextView>


    <EditText
        android:id="@+id/cpf_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="110dp"
        android:layout_marginTop="-35dp"
        android:ems="11"
        android:inputType="number" />

    <TextView
        android:id="@+id/result_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="50dp"
        />


    <Button
        android:id="@+id/btn_camera"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/color_gradientgreen"
        android:text="Take a Picture" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/color_gradientgreen"
        android:text="ACESSAR CONTA" />


</LinearLayout>